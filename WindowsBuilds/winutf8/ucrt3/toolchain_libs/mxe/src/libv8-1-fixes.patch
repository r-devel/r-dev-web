+      host_port_(host_port),
+      thread_(),
+      script_name_(path),
+      id_(GenerateID()) {
+  Mutex::ScopedLock scoped_lock(thread_start_lock_);
+  CHECK_EQ(uv_thread_create(&thread_, InspectorIo::ThreadMain, this), 0);
+  thread_start_condition_.Wait(scoped_lock);
+}
