1C=/usr/local/clang21/bin/clang -std=gnu23 -fsanitize=undefined -fno-sanitize=function -fno-omit-frame-pointer
CXX=/usr/local/clang21/bin/clang++ -fsanitize=undefined -fno-sanitize=function -fno-omit-frame-pointer -frtti
CFLAGS=-g -O3 -Wall -pedantic -Wp,-D_FORTIFY_SOURCE=3
CXXFLAGS=-g -O3 -Wall -pedantic -frtti -Wp,-D_FORTIFY_SOURCE=3
FFLAGS=-g -O2 -pedantic

UBSAN_DIR = /usr/local/clang21/lib/clang/21/lib/x86_64-unknown-linux-gnu
SAN_LIBS = -L$(UBSAN_DIR) -Wl,-rpath,$(UBSAN_DIR) -lclang_rt.ubsan_standalone
